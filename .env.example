# File: .env.example
# Purpose: Environment variables template

# Application Configuration
APP_NAME=SynergyScope
APP_VERSION=1.0.0
DEBUG=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_PREFIX=/api/v1

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# AWS Services
S3_BUCKET=synergyscope-data
NEPTUNE_ENDPOINT=your-neptune-cluster.us-east-1.neptune.amazonaws.com
NEPTUNE_PORT=8182
SAGEMAKER_ENDPOINT=synergyscope-gnn-endpoint
BEDROCK_MODEL_ID=anthropic.claude-v2
QUICKSIGHT_ACCOUNT_ID=123456789012

# Riot Games API
RIOT_API_KEY=your_riot_api_key_here
RIOT_API_REGION=na1
RIOT_API_BASE_URL=https://americas.api.riotgames.com

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost/synergyscope

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Logging
LOG_LEVEL=INFO
